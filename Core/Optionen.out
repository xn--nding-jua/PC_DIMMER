          //        if strtoint(plugingrid.Cells[plugingrid.Col,plugingrid.Row])<(-1*mainform.MaximumChan) then
          //          plugingrid.Cells[plugingrid.Col,plugingrid.Row]:='-'+inttostr(mainform.MaximumChan);
